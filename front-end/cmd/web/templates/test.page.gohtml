{{template "base" .}}

{{define "content" }}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="mt-5">Test microservices</h1>
                <hr>
                <a id="brockerBtn" class="btn btn-outline-secondary" href="javascript:void(0);" role="button">Test Broker</a>
                <a id="authBtn" class="btn btn-outline-secondary" href="javascript:void(0);" role="button">Test Auth</a>
                <a id="logBtn" class="btn btn-outline-secondary" href="javascript:void(0);" role="button">Test Log</a>
                <a id="mailBtn" class="btn btn-outline-secondary" href="javascript:void(0);" role="button">Test Mail</a>
                <div id="output" class="mt-5" style="outline: 1px solid silver; padding: 2em;">
                    <span class="text-muted">Output shows here...</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h4 class="mt-5">Sent</h4>
                <div class="mt-1" style="outline: 1px solid silver; padding: 2em;">
                    <pre id="payload"><span class="text-muted">Nothing sent yet...</span></pre>
                </div>
            </div>
            <div class="col">
                <h4 class="mt-5">Received</h4>
                <div class="mt-1" style="outline: 1px solid silver; padding: 2em;">
                    <pre id="received"><span class="text-muted">Nothing received yet...</span></pre>
                </div>
            </div>
        </div>
    </div>
{{end}}

{{define "js"}}
    <script>

    const brockerBtn = document.getElementById('brockerBtn')
    const authBtn = document.getElementById('authBtn')
    const logBtn = document.getElementById('logBtn')
    const mailBtn = document.getElementById('mailBtn')
    const output = document.getElementById('output')
    const sent = document.getElementById('payload')
    const received = document.getElementById('received')

    mailBtn.addEventListener('click', () => {
        output.innerHTML = 'Loading...'

        payload = {
            action : "mail",
            mail: {
                from: "me@gmail.com",
                to: "you@gmail.com",
                subject: "Test email",
                message: "Hello World !!!"
            }
        }

        fetch("http:\/\/localhost:8080/handle", {
            headers: {
                'Content-Type': 'application/json'
            },
            method: 'POST',
            body: JSON.stringify(payload)
        })
        .then(res => res.json())
        .then(data => {
            sent.innerHTML = JSON.stringify(payload, null, 2)
            received.innerHTML = JSON.stringify(data, null, 2)
            if(data.error) {
               console.error(data.message)
               output.innerHTML = `<br><strong>Response from auth service</strong> ${data.message}`;
            }else{
            output.innerHTML = `<br><strong>Response from brocker service</strong> ${data.message}`;
            }
        })
        .catch(err => {
            output.innerHTML = err.message
        })
    })

    logBtn.addEventListener('click', ()=>{
    
        output.innerHTML = 'Loading...'

        payload = {
            action : "log",
            log: {
                name: "event",
                data: "some data"
            }
        }

        fetch("http:\/\/localhost:8080/handle", {
            headers: {
                'Content-Type': 'application/json'
            },
            method: 'POST',
            body: JSON.stringify(payload)
        })
        .then(res => res.json())
        .then(data => {
            sent.innerHTML = JSON.stringify(payload, null, 2)
            received.innerHTML = JSON.stringify(data, null, 2)
            if(data.error) {
               console.error(data.message)
               output.innerHTML = `<br><strong>Response from log service</strong> ${data.message}`;
            }else{
            output.innerHTML = `<br><strong>Response from brocker service</strong> ${data.message}`;
            }
        })
        .catch(err => {
            output.innerHTML = err.message
        })
    })

    brockerBtn.addEventListener('click', () => {
        output.innerHTML = 'Loading...'

        fetch("http:\/\/localhost:8080", {
            method: 'POST'
        })
        .then(res => res.json())
        .then(data => {
            sent.innerHTML = "empty POST request"
            received.innerHTML = JSON.stringify(data, null, 2)
            if(data.error) {
               console.error(data.message)
            }else{
            output.innerHTML = `<br><strong>Response from brocker service</strong> ${data.message}`;
            }
        })
        .catch(err => {
            output.innerHTML = err.message
        })
    })  

     authBtn.addEventListener('click', () => {
        output.innerHTML = 'Loading...'

        payload = {
            action : "auth",
            auth: {
                email: "admin@example.com",
                password: "verysecret"
            }
        }

        fetch("http:\/\/localhost:8080/handle", {
            headers: {
                'Content-Type': 'application/json'
            },
            method: 'POST',
            body: JSON.stringify(payload)
        })
        .then(res => res.json())
        .then(data => {
            sent.innerHTML = JSON.stringify(payload, null, 2)
            received.innerHTML = JSON.stringify(data, null, 2)
            if(data.error) {
               console.error(data.message)
               output.innerHTML = `<br><strong>Response from auth service</strong> ${data.message}`;
            }else{
            output.innerHTML = `<br><strong>Response from brocker service</strong> ${data.message}`;
            }
        })
        .catch(err => {
            output.innerHTML = err.message
        })
    })  

    </script>
{{end}}
